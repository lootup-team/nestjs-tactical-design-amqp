{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "subject-case": [2, "always", ["lower-case"]],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ],
    "scope-enum": [1, "always", []]
  }
}
